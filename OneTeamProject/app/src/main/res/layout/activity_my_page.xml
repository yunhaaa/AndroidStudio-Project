<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/maincolor"
    tools:context=".activity.MyPageActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/top_logo_border"
        >

        <ImageView
            android:id="@+id/myPageBackButton"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lefticon" />

        <TextView
            android:layout_marginRight="43dp"
            android:gravity="center"
            android:layout_weight="1"
            android:shadowColor="#33000000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:fontFamily="@font/gmarketsansbold"
            android:shadowRadius="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textSize="24dp"
            android:textStyle="bold"

            >
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/maincolor"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left"
        android:orientation="vertical"
        >
        <TextView
            android:shadowColor="#33000000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보수정"
            android:textSize="26dp"
            android:fontFamily="@font/gmarketsansbold"
            android:textColor="@color/white"
            >
        </TextView>

    </LinearLayout>

    <LinearLayout

        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/login_shadow"
                android:backgroundTint="@color/backgroundcolor"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="프로필"
                    android:fontFamily="@font/gmarketsansbold"
                    android:textColor="@color/black"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/mypage_rounded"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user2">

                    </ImageView>

                    <EditText
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:hint="이름"
                        android:fontFamily="@font/gmarketsansbold"
                        ></EditText>

                    <Button
                        android:padding="0dp"
                        android:maxLines="1"
                        android:id="@+id/settingsNameEditButton7"
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/gmarketsansbold"
                        android:textColor="@color/white"
                        android:background="@drawable/login_rounded_background"
                        android:layout_marginRight="5dp"

                        android:text="수정"

                        android:backgroundTint="#000000"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/password">

                    </ImageView>

                    <EditText
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:hint="비밀번호"
                        android:fontFamily="@font/gmarketsansbold"
                        ></EditText>

                    <Button
                        android:layout_height="35dp"
                        android:textColor="@color/white"
                        android:background="@drawable/login_rounded_background"
                        android:id="@+id/settingsNameEditButton2"
                        android:layout_width="65dp"
                        android:layout_marginRight="5dp"
                        android:textSize="14dp"
                        android:text="수정"
                        android:fontFamily="@font/gmarketsansbold"
                        android:backgroundTint="#000000"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/phone">

                    </ImageView>

                    <EditText
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:hint="전화번호"
                        android:fontFamily="@font/gmarketsansbold"
                        ></EditText>

                    <Button
                        android:id="@+id/settingsNameEditButton3"
                        android:layout_width="65dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="35dp"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:background="@drawable/login_rounded_background"
                        android:text="수정"
                        android:fontFamily="@font/gmarketsansbold"
                        android:backgroundTint="#000000"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/email">

                    </ImageView>

                    <EditText
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:hint="이메일"
                        android:fontFamily="@font/gmarketsansbold"
                        ></EditText>

                    <Button
                        android:id="@+id/settingsNameEditButton1"
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:background="@drawable/login_rounded_background"
                        android:layout_marginRight="5dp"
                        android:text="수정"
                        android:fontFamily="@font/gmarketsansbold"
                        android:backgroundTint="#000000"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">
        </LinearLayout>

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"></LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"

            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/login_shadow"
                android:backgroundTint="@color/backgroundcolor">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="비상연락망"
                    android:fontFamily="@font/gmarketsansbold"
                    android:textColor="@color/black"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/mypage_rounded"
                android:orientation="vertical"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/user2">

                    </ImageView>

                    <EditText
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:hint="이름"
                        android:fontFamily="@font/gmarketsansbold"
                        ></EditText>

                    <Button
                        android:layout_height="32dp"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:background="@drawable/login_rounded_background"
                        android:id="@+id/settingsNameEditButton"
                        android:layout_width="60dp"

                        android:layout_marginRight="5dp"
                        android:backgroundTint="#000000"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:fontFamily="@font/gmarketsansbold"
                        android:text="수정"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/relative">

                    </ImageView>

                    <EditText
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:hint="관계"
                        android:fontFamily="@font/gmarketsansbold"
                        ></EditText>

                    <Button
                        android:id="@+id/settingsNameEditButton6"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="#000000"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:text="수정"
                        android:fontFamily="@font/gmarketsansbold"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:background="@drawable/login_rounded_background"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/phone">

                    </ImageView>

                    <EditText
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:hint="전화번호"
                        android:fontFamily="@font/gmarketsansbold"
                        ></EditText>

                    <Button
                        android:id="@+id/settingsNameEditButton9"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="#000000"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:text="수정"
                        android:textSize="13dp"
                        android:fontFamily="@font/gmarketsansbold"

                        android:textColor="@color/white"
                        android:background="@drawable/login_rounded_background"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"

        >

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="회원탈퇴"
            android:fontFamily="@font/gmarketsansbold"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:background="@drawable/main_statistics_button_rounded_background"
            />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="저장"
            android:fontFamily="@font/gmarketsansbold"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="@drawable/main_statistics_button_rounded_background"

            />

    </LinearLayout>

</LinearLayout>