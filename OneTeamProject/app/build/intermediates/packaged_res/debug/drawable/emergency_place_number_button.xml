<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@color/backgroundcolor" /> <!-- 배경색: 흰색 -->
    <corners android:radius="40dp" /> <!-- 모서리 둥글게 설정 -->
    <stroke android:color="@color/backgroundcolor" android:width="1dp" /> <!-- 테두리 색상: 검은색, 두께: 1dp -->
    <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" /> <!-- 내부 패딩 -->

    <!-- 그림자 효과 -->
    <item>
        <shape>
            <solid android:color="#40000000" /> <!-- 그림자 색상 및 투명도 -->
            <corners android:radius="40dp" /> <!-- 모서리 둥글게 설정 -->
        </shape>
    </item>
</shape>
